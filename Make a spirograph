import turtle
import random

turtle_colors = [
     "black", "red", "green", "blue",
     "magenta", "orange", "purple",
    "brown",  "gray", "lightblue",
      "maroon", "navy", "violet", "turquoise"
]

t = turtle.Turtle()
t.pendown()
t.pensize(5)
for i in range(18):
    if i==0 or i==4 or i==8 or i==12 or i==16:
        t.color(random.choice(turtle_colors))
    t.circle(100)
    t.right(20)

turtle.done()



